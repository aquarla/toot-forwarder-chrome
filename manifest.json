{
    "manifest_version": 2,
    "name": "トゥートを別サーバに転送",
    "version": "1.1.0.0",
    "permissions": [
        "contextMenus",
        "identity",
        "storage"
    ],
    "background": {
        "scripts": [
            "dist/vendor.js",
            "dist/contextmenu.js",
            "dist/background.js"
        ],
        "persistent": true
    },
    "icons": {
        "16":  "icons/16.png",
        "48":  "icons/48.png",
        "128": "icons/128.png"
    },
    "options_page": "options.html"
}
